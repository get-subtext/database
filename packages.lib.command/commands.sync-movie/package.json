{
  "name": "@get-subtext/lib.command.sync-movie",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "run-s clean checktypes test pkgroll",
    "clean": "shx rm -rf ./dist ./coverage",
    "checktypes": "tsc --noEmit",
    "pkgroll": "pkgroll --minify",
    "test": "jest --verbose"
  },
  "dependencies": {
    "@get-subtext/lib.movie-reader": "workspace:^",
    "@get-subtext/lib.movie-writer": "workspace:^",
    "@types/node": "^22.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pkgroll": "^2.5.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
