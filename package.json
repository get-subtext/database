{
  "name": "@get-subtext/root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm run -r --workspace-concurrency 1 build",
    "bump-deps": "ncu -u --deep",
    "checktypes": "pnpm run -r --workspace-concurrency 1 checktypes",
    "clean": "pnpm run -r clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky",
    "process-issue": "tsx --tsconfig ./packages.cli/subtext-manager/tsconfig.json ./packages.cli/subtext-manager/src/index.ts process-issue",
    "index-queries": "tsx --tsconfig ./packages.cli/subtext-manager/tsconfig.json ./packages.cli/subtext-manager/src/index.ts index-queries -u subtext-bot",
    "release": "run-s release:*",
    "release:01": "pnpm run -r --workspace-concurrency 1 build",
    "release:02": "pnpm changeset version",
    "release:03": "clean-pkgjson pre-process",
    "release:04": "pnpm changeset publish",
    "release:05": "clean-pkgjson post-process",
    "test": "pnpm run -r --workspace-concurrency 1 test"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.8",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-check-updates": "^17.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2"
  }
}
